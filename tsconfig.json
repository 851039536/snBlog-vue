{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "lib": ["dom", "esnext"],
    "paths": {
      "@/*": ["src/*"],
      "@comp/*": ["src/components/*"],
      "@api/*": ["src/api/*"],
      "@vi/*": ["src/views/*"],
      "@h/*": ["src/hooks/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
